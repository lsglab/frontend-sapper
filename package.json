{
	"name": "lsg-homepage",
	"version": "0.0.1",
	"private": true,
	"description": "Our new school website frontend",
	"license": "AGPL-3.0-or-later",
	"scripts": {
		"do:autofix": "run-s format lint do:static do:favicon",
		"do:build": "run-s do:autofix run:build",
		"do:commit": "yarn git:commit",
		"do:dev": "run-s do:autofix run:hot",
		"do:export": "run-s do:autofix run:export",
		"do:favicon": "run-s favicon:ci favicon:copy favicon:inject",
		"do:master": "yarn git:master",
		"do:push": "yarn git:push",
		"do:serve": "yarn run:serve",
		"do:start": "yarn run:start",
		"do:static": "yarn static",
		"do:sync": "yarn git:sync",
		"do:testing": "run-s do:static do:favicon prettier:report eslint:report stylelint:report run:export",
		"eslint:fix": "eslint --fix --cache --report-unused-disable-directives --ext svelte,js .",
		"eslint:report": "eslint --report-unused-disable-directives --max-warnings 0 --ext svelte,js .",
		"favicon:ci": "real-favicon check-for-update --fail-on-update faviconData.json",
		"favicon:copy": "cpy \"./src/assets/favicons/**/*\" static --dot",
		"favicon:generate": "run-s favicon:generate:*",
		"favicon:generate:before": "rimraf src/assets/favicons/",
		"favicon:generate:do": "real-favicon generate faviconDescription.json faviconData.json src/assets/favicons/",
		"favicon:generate:prettify": "prettier --write --plugin-search-dir=. faviconData.json",
		"favicon:inject": "run-s favicon:inject:*",
		"favicon:inject:do": "real-favicon inject faviconData.json src src/assets/template.html",
		"favicon:inject:prettify": "prettier --write --plugin-search-dir=. src/template.html",
		"favicon:update": "real-favicon check-for-update faviconData.json",
		"format": "run-s format:*",
		"format:code": "run-s format:code:*",
		"format:code:prettier": "yarn prettier:fix",
		"git:add": "git add -A",
		"git:commit": "run-s git:commit:*",
		"git:commit:checks": "run-s do:autofix git:add",
		"git:commit:do": "cz",
		"git:master": "run-s git:master:merge git:add git:master:commit",
		"git:master:commit": "git commit -m 'fix: merge from master'",
		"git:master:merge": "git merge master --no-commit",
		"git:push": "git push --prune",
		"git:sync": "yarn warn:soydows && ./Scripts/sync.sh",
		"lint": "run-s lint:*",
		"lint:scripts": "run-s lint:scripts:*",
		"lint:scripts:eslint": "yarn eslint:fix",
		"lint:styles": "run-s lint:styles:*",
		"lint:styles:stylelint": "yarn stylelint:fix",
		"lint:styles:validate": "yarn stylelint:validate",
		"prettier:fix": "prettier --write --plugin-search-dir=. \"./**/*.{svelte,js,md,json,yml,html,css,pcss,scss}\"",
		"prettier:report": "prettier --check --plugin-search-dir=. \"./**/*.{svelte,js,md,json,yml,html,css,pcss,scss}\"",
		"run:build": "cross-env NODE_ENV=production run-s run:build:*",
		"run:build:before": "cross-env NODE_ENV=development yarn run:export:do",
		"run:build:do": "sapper build --legacy",
		"run:export": "cross-env NODE_ENV=production run-s run:export:*",
		"run:export:before": "cross-env NODE_ENV=development yarn run:export:do",
		"run:export:do": "sapper export",
		"run:hot": "cross-env NODE_ENV=development run-s run:hot:*",
		"run:hot:do": "sapper dev",
		"run:serve": "serve __sapper__/export",
		"run:start": "cross-env NODE_ENV=production run-s run:start:*",
		"run:start:do": "node __sapper__/build",
		"static": "run-s static:*",
		"static:copy": "cpy \"./src/assets/static/**/*\" static --dot",
		"static:delete": "rimraf static",
		"stylelint:fix": "stylelint \"./**/*.{html,css,pcss,scss,svelte}\" --fix --cache --report-needless-disables --report-invalid-scope-disables --report-descriptionless-disables",
		"stylelint:report": "stylelint \"./**/*.{html,css,pcss,scss,svelte}\" --max-warnings 0 --report-needless-disables --report-invalid-scope-disables --report-descriptionless-disables",
		"stylelint:validate": "stylelint-config-prettier-check",
		"warn:soydows": "echo \"Warning: This will fail if you're on a non-unix-like operating system, or more specifically, Windows. Get WSL, or just install Linux directly.\""
	},
	"dependencies": {
		"@ckeditor/ckeditor5-build-inline": "^27.0.0",
		"axios": "^0.21.1",
		"compression": "^1.7.4",
		"polka": "^0.5.2",
		"serve": "^11.3.2",
		"sirv": "^1.0.6"
	},
	"devDependencies": {
		"@babel/core": "^7.11.6",
		"@babel/plugin-proposal-object-rest-spread": "^7.11.0",
		"@babel/plugin-proposal-optional-chaining": "^7.11.0",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/preset-env": "^7.11.5",
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@rollup/plugin-babel": "^5.2.1",
		"@rollup/plugin-commonjs": "^15.1.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-legacy": "^2.0.0",
		"@rollup/plugin-node-resolve": "^9.0.0",
		"@rollup/plugin-replace": "^2.3.3",
		"@rollup/plugin-strip": "^2.0.0",
		"autoprefixer": "^10.2.4",
		"babel-eslint": "^10.1.0",
		"babel-plugin-lodash": "^3.3.4",
		"cli-real-favicon": "^0.0.8",
		"commitizen": "^4.2.1",
		"core-js": "^3.6.5",
		"cp-file": "^9.0.0",
		"cpy-cli": "^3.1.1",
		"cross-env": "^7.0.2",
		"cssnano": "^4.1.10",
		"cssnano-preset-advanced": "^4.0.7",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.10.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-config-prettier": "^6.12.0",
		"eslint-plugin-babel": "^5.3.1",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
		"eslint-plugin-sort-keys-fix": "^1.1.1",
		"eslint-plugin-svelte3": "^2.7.3",
		"esm": "^3.2.25",
		"husky": "^4.3.0",
		"lint-staged": "^10.4.0",
		"lodash": "^4.17.21",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.2.6",
		"postcss-assets": "^5.0.0",
		"postcss-fail-on-warn": "^0.1.0",
		"postcss-flexbugs-fixes": "^4.2.1",
		"postcss-import": "^12.0.1",
		"postcss-load-config": "^2.1.1",
		"postcss-url": "^8.0.0",
		"prettier": "^2.1.2",
		"prettier-plugin-package": "^1.0.0",
		"prettier-plugin-svelte": "^1.4.0",
		"rimraf": "^3.0.2",
		"rollup": "^2.28.2",
		"rollup-plugin-svelte": "^6.0.1",
		"rollup-plugin-terser": "^7.0.2",
		"sapper": "^0.28.9",
		"sass": "^1.26.11",
		"smoothscroll-polyfill": "^0.4.4",
		"stylelint": "^13.7.2",
		"stylelint-config-prettier": "^8.0.2",
		"svelte": "^3.28.0",
		"svelte-preprocess": "^4.3.2",
		"systemjs": "^6.6.1",
		"tailwindcss": "^2.0.3",
		"xxhashjs": "^0.2.2"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS --verbose"
		}
	}
}
